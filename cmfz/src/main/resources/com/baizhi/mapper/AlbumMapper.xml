<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.mapper.AlbumMapper">

    <resultMap id="albumMap1" type="Album">
        <id column="aid" property="id"/>
        <result column="atitle" property="title"/>
        <result column="aauthor" property="author"/>
        <result column="abroadcast" property="broadcast"/>
        <result column="ascore" property="score"/>
        <result column="acount" property="count"/>
        <result column="abrief" property="brief"/>
        <result column="apub_date" property="pubDate"/>
        <result column="acover_img" property="coverImg"/>
        <collection property="children" ofType="Chapter" >
            <id column="cid" property="id"/>
            <result column="curl" property="url"/>
            <result column="ctitle" property="title"/>
            <result column="csize" property="size"/>
            <result column="calbum_id" property="albumId"/>
            <result column="cduration" property="duration"/>
            <result column="cupload_date" property="uploadDate"/>
        </collection>
    </resultMap>


    <select id="selectAllAlbum" resultMap="albumMap1">
        select a.id          aid,
               a.title       atitle,
               a.author      aauthor,
               a.broadcast   abroadcast,
               a.score       ascore,
               a.count       acount,
               a.brief       abrief,
               a.pub_date    apub_date,
               a.cover_img   acover_img,
               c.id          cid,
               c.url         curl,
               c.title       ctitle,
               c.size        csize,
               c.album_id    calbum_id,
               c.duration    cduration,
               c.upload_date cupload_date
        from (select * from album limit #{page},#{rows}) a
                 left join chapter c
                           on a.id = c.album_id
    </select>
</mapper>